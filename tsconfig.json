{
  "compilerOptions": {
    "target": "ES2016",                       
    "module": "ESNext",                       
    "lib": ["DOM", "DOM.Iterable", "ESNext"], 
    "allowJs": true,                          
    "skipLibCheck": true,                     
    "esModuleInterop": true,                  
    "allowSyntheticDefaultImports": true,     
    "strict": true,                           
    "forceConsistentCasingInFileNames": true, 
    "moduleResolution": "node",               
    "resolveJsonModule": true,                
    "isolatedModules": true,                  
    "noEmit": true,                           
    "jsx": "react-jsx"                        
  },
  "include": ["src"]
}
